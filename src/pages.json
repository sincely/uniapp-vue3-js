{
  "easycom": {
    "autoscan": true
  },
  "pages": [
    //只放TabBar页面和启动必要页面,pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/tabbar/home/index",
      "style": {
        "navigationBarTitleText": "首页",
        "initialRenderingCache": "static"
      },
      "needLogin": false
    },
    {
      "path": "pages/tabbar/list/index",
      "style": {
        "navigationBarTitleText": "列表"
      },
      "needLogin": false
    },
    {
      "path": "pages/tabbar/user/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom"
      },
      "needLogin": true
    }
  ],
  "tabBar": {
    "color": "@tabFontColor",
    "selectedColor": "@tabSelectedColor",
    "backgroundColor": "@tabBgColor",
    "borderStyle": "@tabBorderStyle",
    "list": [
      {
        "pagePath": "pages/tabbar/home/index"
      },
      {
        "pagePath": "pages/tabbar/list/index"
      },
      {
        "pagePath": "pages/tabbar/user/index"
      }
    ]
  },
  "subPackages": [
    {
      "root": "pages/business",
      "pages": [
        {
          "path": "pinia/index",
          "style": {
            "navigationBarTitleText": "状态管理工具（pinia）"
          },
          "needLogin": true
        },
        {
          "path": "axios/index",
          "style": {
            "navigationBarTitleText": "Axios（网络请求示例）"
          },
          "needLogin": true
        },
        {
          "path": "uview/index",
          "style": {
            "navigationBarTitleText": "uView 示例组件"
          },
          "needLogin": false
        }
      ]
    },
    {
      "root": "pages/common",
      "pages": [
        {
          "path": "login/index",
          "style": {
            "navigationBarTitleText": "登录",
            "navigationStyle": "custom"
          },
          "needLogin": false
        },
        {
          "path": "webview/index",
          "style": {
            "navigationBarTitleText": "网页"
          },
          "needLogin": false
        },
        {
          "path": "404/index",
          "style": {
            "navigationBarTitleText": "页面不存在"
          },
          "needLogin": false
        }
      ]
    }
  ],
  "preloadRule": {
    // 进入首页后预加载
    "pages/tabbar/home/index": {
      "network": "all",
      "packages": [
        "pages/business"
      ]
    }
    // 进入商品列表时预加载商品详情页所在分包
    // "subpkg-goods/list/list": {
    //   "network": "all",
    //   "packages": ["subpkg-goods"]
    // }
  },
  "globalStyle": {
    "backgroundColor": "@bgColor",
    "backgroundColorBottom": "@bgColorBottom",
    "backgroundColorTop": "@bgColorTop",
    "backgroundTextStyle": "@bgTxtStyle",
    "navigationBarBackgroundColor": "@navBgColor",
    "navigationBarTextStyle": "@navTxtStyle",
    "navigationBarTitleText": "uView Pro",
    "navigationStyle": "custom"
    // "mp-alipay": {
    //   "transparentTitle": "always",
    //   "titlePenetrate": "YES"
    // }
  }
}