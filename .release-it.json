{
  "git": {
    "commitMessage": "chore: v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "requireUpstream": true,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "push": true,
    "pushArgs": [
      "--follow-tags"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "GITHUB_TOKEN",
    "assets": [
      "dist/*.zip",
      "dist/*.tar.gz",
      "CHANGELOG.md",
      "README.md"
    ],
    "draft": false,
    "preRelease": false,
    "proxy": null
  },
  "npm": {
    "publish": false,
    "versionArgs": [
      "--workspaces-update=false"
    ],
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES"
        ]
      },
      "writerOpts": {
        "types": [
          {
            "type": "init",
            "section": "ğŸ‰ init",
            "hidden": false
          },
          {
            "type": "feat",
            "section": "âœ¨ Features",
            "hidden": false
          },
          {
            "type": "fix",
            "section": "ğŸ Bug Fixes",
            "hidden": false
          },
          {
            "type": "perf",
            "section": "âš¡ Performance Improvements",
            "hidden": false
          },
          {
            "type": "revert",
            "section": "ğŸ’« Reverts",
            "hidden": false
          },
          {
            "type": "docs",
            "section": "ğŸ“ Documentation",
            "hidden": false
          },
          {
            "type": "style",
            "section": "ğŸ¨ Styles",
            "hidden": false
          },
          {
            "type": "chore",
            "section": "ğŸ”§ Chores",
            "hidden": false
          },
          {
            "type": "refactor",
            "section": "â™»ï¸ Code Refactoring",
            "hidden": false
          },
          {
            "type": "test",
            "section": "ğŸ§ª Tests",
            "hidden": false
          },
          {
            "type": "build",
            "section": "ğŸ­ Build System",
            "hidden": false
          },
          {
            "type": "ci",
            "section": "ğŸ¤– Continuous Integration",
            "hidden": false
          },
          {
            "type": "release",
            "section": "ğŸš€ Releases",
            "hidden": false
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n",
      "ignoreRecommendedBump": false,
      "strictSemVer": true
    }
  },
  "hooks": {
    "after:git:release": "echo 'Git release completed successfully!'",
    "before:github:release": "echo 'Creating GitHub release...'",
    "after:github:release": "echo 'GitHub release created successfully!'",
    "after:release": "echo 'Release v${version} completed successfully!'"
  }
}